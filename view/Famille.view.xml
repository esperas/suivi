<mvc:View
          controllerName="ecole.famille.controller.Suivi"
          xmlns="sap.m"
          xmlns:l="sap.ui.layout"
          xmlns:mvc="sap.ui.core.mvc">
    <Page 
        id="famille" 
        class="sapUiStdPage" 
        title="Adresse">
    <Panel class="sapUiResponsiveMargin"
           width="auto"
           headerText="Famille : {famille>/famille}">
        <content>
            <l:VerticalLayout class="sapUiSmallMargin" >
                <Text  text="{famille>/nom}" />
                <Text  text="{famille>/adresse1}" />
                <Text  text="{famille>/adresse2}" />
                <Text  text="{famille>/ville}" />
            </l:VerticalLayout>
        </content>
    </Panel>
        <l:VerticalLayout class="sapUiSmallMargin" >
            <Text text="Ces informations sont utilisés dans votre facture." />
            <Text text="Si elles ne sont pas correctes, merci d'envoyer un mail au trésorier pour corriger les données." />
            <Link
                  text="Adresse mail du trésorier"
                  emphasized="true"
                  href="mailto:tresorier@calandreta-dauna.fr" />
        </l:VerticalLayout>
    </Page>
</mvc:View>
