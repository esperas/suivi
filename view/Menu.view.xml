<mvc:View
   controllerName="ecole.famille.controller.Menu"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">

    <Page
        id="menu"
        class="sapUiStdPage"
        title="{i18n>famille} {famille>/famille}"
        >
    <Panel >
        <List id="MenuList"
                items="{ path: 'menu>/Menu' }">
              <items>
                <ObjectListItem
                    title="{menu>title}"
				    press="navToMenu"
				    type="Navigation">

                    <attributes>
					   <ObjectAttribute text="{menu>description}" />
				    </attributes>

			    </ObjectListItem>

            </items>
        </List>
    </Panel>
    </Page>


</mvc:View>
